<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.VirtualStyler" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/appPrimary</item>
        <item name="colorPrimaryVariant">@color/appPrimaryDark</item>
        <item name="colorOnPrimary">@color/appAccent</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/appNavigationBar</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.VirtualStyler.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.VirtualStyler.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme.VirtualStyler.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>